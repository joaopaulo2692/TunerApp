<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TunerApp.MainPage">

    <VerticalStackLayout Padding="20" Spacing="30" HorizontalOptions="Center">

        <Label x:Name="NoteLabel"
               Text="Tocando..."
               FontSize="48"
               HorizontalOptions="Center" />

        <Button Text="Iniciar Afinador" Clicked="StartTuner_Clicked"/>
        <Button Text="Parar" Clicked="StopTuner_Clicked"/>

    </VerticalStackLayout>
</ContentPage>
